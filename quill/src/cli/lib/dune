(rule
 (deps %{lib:ndarray:ndarray.cma})
 (targets ndarray.cma)
 (action
  (copy %{deps} %{targets})))

(rule
 (deps %{lib:ndarray:ndarray.cmi})
 (targets ndarray.cmi)
 (action
  (copy %{deps} %{targets})))

