     :standard
     (:include ../cclibs.sexp))))
  (headers
   (include "objc/runtime.h"))
  (type_description
   (instance Types)
   (functor Type_description))
  (function_description
   (concurrency unlocked)
   (instance Functions)
   (functor Function_description))
  (generated_types Types_generated)
  (generated_entry_point objc_c)))
